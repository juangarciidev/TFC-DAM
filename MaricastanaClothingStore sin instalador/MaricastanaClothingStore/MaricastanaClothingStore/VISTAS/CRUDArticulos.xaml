                       Grid.Column="1"
                       Text="Marca:"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="20"/>
            <TextBox Style="{DynamicResource TextBoxEstilo}"
                     x:Name="tbMarca" Grid.Column="2"
                     Grid.Row="8" FontSize="14" TextWrapping="Wrap" VerticalContentAlignment="Center">
                <TextBox.Text>
                    <Binding Path="Marca"/>
                </TextBox.Text>
            </TextBox>

            <TextBlock Grid.Row="10"
                       Grid.Column="1"
                       Text="Color:"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="20"/>
            <TextBox Style="{DynamicResource TextBoxEstilo}"
                     x:Name="tbColor" Grid.Column="2"
                     Grid.Row="10" FontSize="14" TextWrapping="Wrap" VerticalContentAlignment="Center">
                <TextBox.Text>
                    <Binding Path="Color"/>
                </TextBox.Text>
