                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <!-- ENDREGION-->
            <!--REGION TITULO-->
            <TextBlock x:Name="Titulo"
                       Text="Creación de Usuarios"
                       Grid.Column="1"
                       Grid.Row="1"
                       Grid.ColumnSpan="5"
                       FontSize="30"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center" Height="50"/>
            <!--#endregion-->
            <!--REGION BOTONES-->
            <!-- REGION VOLVER-->
            <Button Style="{DynamicResource BtnEstilo}" x:Name="BtnVolver"
                    Content="Volver"
                    Grid.Column="1"
                    Grid.Row="2"
                    Width="90"
                    Cursor="Hand"
                    Background="#715a52" 
                    Click="BtnVolver_Click" FontSize="15"/>
            <!-- ENDREGION-->
            <!-- REGION CREAR-->
            <Button Style="{DynamicResource BtnEstilo}" x:Name="BtnCrear"
                    Content="Crear"
                    Grid.Column="5"
                    Grid.Row="18"
                    Width="90"
                    Cursor="Hand"
                    Background="#715a52" 
                    Visibility="Hidden"
                    Click="BtnCrear_Click" FontSize="15"/>
            <!-- ENDREGION-->
            <!-- REGION ACTUALIZAR-->
            <Button Style="{DynamicResource BtnEstilo}" x:Name="BtnActualizar"
                    Content="Actualizar"
                    Grid.Column="5"
                    Grid.Row="18"
                    Width="100"
                    Cursor="Hand"
                    Background="#715a52" 
                    Visibility="Hidden" Click="BtnActualizar_Click" FontSize="15"/>
            <!-- ENDREGION-->
            <!-- ENDREGION-->
            <!--REGION CONTENIDO-->
            <TextBlock Grid.Row="4"
                       Grid.Column="1"
                       Text="Nombre:"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center" FontSize="20"/>
            <TextBox Style="{DynamicResource TextBoxEstilo}" Grid.Row="4"
                       Grid.Column="2"
                       x:Name="tbNombre" FontSize="14" TextWrapping="Wrap" VerticalContentAlignment="Center">
                <TextBox.Text>
                    <Binding Path="Nombre"/>
                </TextBox.Text>
            </TextBox>

            <TextBlock Grid.Row="6"
                       Grid.Column="1"
                       Text="Apellidos:"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center" FontSize="20"/>
            <TextBox Style="{DynamicResource TextBoxEstilo}" 
                     Grid.Row="6"
                     Grid.Column="2"
                     x:Name="tbApellidos" FontSize="14" TextWrapping="Wrap" VerticalContentAlignment="Center">
                <TextBox.Text>
                    <Binding Path="Apellidos"/>
                </TextBox.Text>
            </TextBox>

            <TextBlock Grid.Row="8"
                       Grid.Column="1"
                       Text="DNI:"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center" FontSize="20"/>
            <TextBox Style="{DynamicResource TextBoxEstilo}" 
                     x:Name="tbDNI" 
                     Grid.Column="2"
                     Grid.Row="8" FontSize="14" TextWrapping="Wrap" VerticalContentAlignment="Center">
                <TextBox.Text>
                    <Binding Path="DNI"/>
                </TextBox.Text>
            </TextBox>

            <TextBlock Grid.Row="10"
                       Grid.Column="1"
                       Text="Correo:"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center" FontSize="20"/>
            <TextBox Style="{DynamicResource TextBoxEstilo}" 
                     x:Name="tbCorreo" 
                     Grid.Column="2"
                     Grid.Row="10" FontSize="14" TextWrapping="Wrap" VerticalContentAlignment="Center">
                <TextBox.Text>
                    <Binding Path="Correo"/>
                </TextBox.Text>
            </TextBox>

            <TextBlock Grid.Row="12"
                       Grid.Column="1"
                       Text="Teléfono:"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center" FontSize="20"/>
            <TextBox Style="{DynamicResource TextBoxEstilo}" 
                     x:Name="tbTelefono" 
                     Grid.Column="2"
                     Grid.Row="12" FontSize="14" TextWrapping="Wrap" VerticalContentAlignment="Center">
                <TextBox.Text>
                    <Binding Path="Telefono"/>
                </TextBox.Text>
            </TextBox>

            <TextBlock Grid.Row="14"
                       Grid.Column="1"
                       Text="Fecha de Nacimiento:"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center" FontSize="20"/>
            <DatePicker x:Name="tbFechaNac" Grid.Column="2"
                     Grid.Row="14" FontSize="14" SelectedDate="{Binding Path=FechaNacimiento}" BorderThickness="3,3,3,2" ScrollViewer.HorizontalScrollBarVisibility="Auto" HorizontalContentAlignment="Stretch" Height="30" VerticalContentAlignment="Bottom"/>

            <TextBlock Grid.Row="16"
                       Grid.Column="1"
                       Text="Dirección:"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center" FontSize="20"/>
            <TextBox Style="{DynamicResource TextBoxEstilo}"
                     x:Name="tbDireccion" 
                     Grid.Column="2"
                     Grid.Row="16" FontSize="14" TextWrapping="Wrap" VerticalContentAlignment="Center">
                <TextBox.Text>
                    <Binding Path="Direccion"/>
                </TextBox.Text>
            </TextBox>

            <TextBlock Grid.Row="18"
                       Grid.Column="1"
                       Text="Privilegio:"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center" FontSize="20"/>
            <ComboBox Style="{DynamicResource ComboBoxEstilo}" x:Name="cbPrivilegio" 
                      Grid.Column="2"
                      Grid.Row="18" FontSize="14" 
                      HorizontalContentAlignment="Center"
                      VerticalContentAlignment="Center" FontWeight="Bold" Cursor="Hand">
                <ComboBox.SelectedValue>
                    <Binding Path="PrivilegioId"/>
                </ComboBox.SelectedValue>
                <ComboBox.ItemContainerStyle>
                    <Style TargetType="{x:Type ComboBoxItem}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ComboBoxItem}">
                                    <Border CornerRadius="10" SnapsToDevicePixels="True"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsHighlighted" Value="True">
                                            <Setter Property="Background" Value="#725b53" />
                                            <Setter Property="BorderBrush" Value="#725b53" />
                                        </Trigger>
                                        <Trigger Property="IsHighlighted" Value="false">
                                            <Setter Property="Foreground" Value="Black"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ComboBox.ItemContainerStyle>
            </ComboBox>
            <Image Grid.Row="3"
                   Grid.Column="3"
                   Grid.RowSpan="10"
                   Grid.ColumnSpan="3"
                   x:Name="imagen"
                   Source="/IMAGENES/anonimo.jpg"
                   Margin="10,27,156,3">
            </Image>
            <TextBlock Text="Usuario:"
                       Grid.Column="4"
                       Grid.Row="14"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center" FontSize="20" Margin="20,0,0,0"/>
            <TextBox Style="{DynamicResource TextBoxEstilo}"
                     x:Name="tbUsuario"
                     Grid.Column="5"
                     Grid.Row="14" FontSize="14" TextWrapping="Wrap" VerticalContentAlignment="Center">
                <TextBox.Text>
                    <Binding Path="LoginUsuario"/>
                </TextBox.Text>
            </TextBox>
            <TextBlock Text="Contraseña:"
                       Grid.Column="4"
                       Grid.Row="16"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center" FontSize="20" Margin="20,0,0,0"/>
            <TextBox Style="{DynamicResource TextBoxEstilo}"
                     x:Name="tbContrasena"
                     Grid.Column="5"
                     Grid.Row="16" FontSize="14" TextWrapping="Wrap" VerticalContentAlignment="Center">
                <TextBox.Text>
                    <Binding Path="LoginContraseña"/>
                </TextBox.Text>
            </TextBox>
            <Button Style="{DynamicResource BtnEstilo}" x:Name="BtnImagen"
                Content="Cambiar imagen"
                Grid.Column="5"
                Grid.Row="8"
                Width="125"
                Cursor="Hand"
                Background="#715a52"
                Click="BtnImagen_Click" Margin="75,0,0,0" FontSize="15"/>
            <!-- ENDREGION-->
        </Grid>
    </Border>
</Page>
